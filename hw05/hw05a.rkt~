;;;;;;;;;;;;;;;;;;;;;;;;;
(define channel (make-channel))
(define count 0)

(define A-arrive (lambda ()
   (channel-get channel) 
   (channel-get channel)))

(define B-arrive (lambda ()
   (channel-put channel #t)))

(define thread-A
(thread
  (lambda ()
            (let loop ()
              (A-arrive)
              (set! count (+ count 1))
              (loop)))))

(define thread-B1
(thread
  (lambda ()
            (let loop ()
              (B-arrive)
              (loop)))))

(define thread-B2
(thread
  (lambda ()
            (let loop ()
              (B-arrive)
              (loop)))))

(define thread-B3
(thread
  (lambda ()
            (let loop ()
              (B-arrive)
              (loop)))))

(let loop ()
  (if (equal? count 10) 
      (begin (thread-suspend thread-A)
             (thread-suspend thread-B1)
             (thread-suspend thread-B2)
             (thread-suspend thread-B3)) 
      (loop)))
